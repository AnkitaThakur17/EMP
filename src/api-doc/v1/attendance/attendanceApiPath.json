    "myAttendance": {
      "summary": "fetch single employee attendance record.",
      "description": "gives single employee attendance details",
      "tags": ["Attendance"],
      "consumes": ["application/json"],
      "produces": ["application/json"],
      "parameters": [
        {
          "in": "query",
          "name": "userId",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "Unique userId of the user"
        }
      ],
      "responses": {
        "200": {
          "description": "When employee attendance record fetch successfully.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "integer",
                    "example": 200
                  },
                  "data": {
                    "User_id": "678667b7dc707392f76c5ff2",
                    "fullname": "john david",
                    "punchDate": "08/12/20225",
                    "punchTime": "10:30:00",
                    "leavingTime": "7:30",
                    "workingHours": "9:00",
                    "punctualStatus": "On-Time",
                    "punchType": "WEB"
                  }
                }
              }
            }
          }
        },
