    "allAttendance": {
      "summary": "fetch all of the employees attendance record.",
      "description": "gives every employee's attendance details",
      "tags": ["Attendance"],
      "consumes": ["application/json"],
      "produces": ["application/json"],
      "parameters": [
        {
          "in": "query",
          "name": "pageNo",
          
          "schema": {
            "type": "string",
            "example":"1"
          },
          "description": "Enter Page number"
        },
        {
          "in": "query",
          "name": "search",
          "schema": {
            "type": "string",
            "example":"ankita"
          },
          "description": "Enter search name"
        },
        {
          "in": "query",
          "name": "teamFilter",
          "schema": {
            "type": "string",
            "enum":["frontend","backend"]
          },
          "description": "Enter Team name"
        },
        {
          "in": "query",
          "name": "statusFilter",
          "schema": {
            "type": "string",
            "enum":["On-Time", "Late", "Missing"]
          },
          "description": "Enter status"
        },
          {
          "in": "query",
          "name": "startDate",
          "schema": {
          "type": "string",
          "example": "2025-12-09"
          },
          "description": "Enter startDate"
        },
        {
          "in": "query",
          "name": "endDate",
          "schema": {
            "type": "string",
             "example": "2025-12-12"
          },
          "description": "Enter endDate"
        }
      ],
      "responses": {
        "200": {
          "description": "When employee attendance record fetch successfully.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "integer",
                    "example": 200
                  },
                  "data": {
                    "User_id": "678667b7dc707392f76c5ff2",
                    "fullname": "john david",
                    "punchDate": "08/12/20225",
                    "punchTime": "10:30:00",
                    "leavingTime": "7:30",
                    "workingHours": "9:00",
                    "punctualStatus": "On-Time",
                    "punchType": "WEB"
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Invalid UserId",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "integer",
                    "example": 127
                  }
                }
              }
            }
          }
        },
        "400": {
